{
    "manifest_version": 3,
    "name": "Stop it",
    "default_title": "Stop it",
    "description": "You shall not be distracted or you shall provide a weak ass excuse why...",
    "author": "thomas.c.hoek@gmail.com",
    "version": "1.0.1",
    "icons": {
        "16": "16.png",
        "24": "24.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/16.png",
            "24": "icons/24.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://youtube.com/*",
                "https://youtu.be/*",
                "https://instagram.com/*",
                "https://facebook.com/*",
                "https://netflix.com/*",
                "https://web.whatsapp.com/*"
            ]
        }
    ]
}